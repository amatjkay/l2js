  },
  "actions": {
    "enableActions": true,
    "mode": "arduino",
    "windowMatch": [
      {
        "hwnd": "0x00040686"
      },
      {
        "titleEquals": "LU4  "
      },
      {
        "classNameEquals": "UnrealWindow"
      },
      {
        "processName": "lu4"
      },
      {
        "processFileExact": "lu4.bin"
      }
